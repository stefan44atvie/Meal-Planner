      class="tab-pane fade show active"
      id="ex1-pills-1"
      role="tabpanel"
      aria-labelledby="ex1-tab-1">

      {# ALL MEALS  #}
            <div class="container">
                <div class="row row-cols-1 row-cols-md-3 g-4">
                    {% for meal in meals %}
                    <div class="col">
                        <div class="card col-sm-5">
                            <img src="{{meal.picture}}" alt="Girl in a jacket">              
                            <div class="card-body">
                            <h5 class="card-title text-center"> {{meal.name}}</h5>
                            <p class="card-text text-center">
                                {{meal.rating}} stars (rated by users),
                                <a class="card-text text-end caloriestext"> {{meal.calories}} calories</a>
                                
                        </p>
