{% endblock %}


{% block body %}
        {% include "components/navbar.html" %}

    <h1>All Meals</h1>
<p> Find here all existing recipes on this page </p>
{# categories #}

{# Collapsing categories  #}
<p>
    <a class="btn btn-primary" data-bs-toggle="collapse" href="#meat" role="button" aria-expanded="false" aria-controls="meat">Meat</a>
    <a class="btn btn-primary" data-bs-toggle="collapse" href="#vegan" role="button" aria-expanded="false" aria-controls="vegan">vegan</a>

    <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#vegetarian" aria-expanded="false" aria-controls="vegetarian">Vegetarian</button>
    <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#vegan" aria-expanded="false" aria-controls="vegan">Vegan</button>

</p>
<div class="row">
    <div class="col">
      <div class="collapse multi-collapse" id="meat">
        <div class="card card-body">
            <div class="container">
                <div class="row row-cols-1 row-cols-md-3 g-4">
                    {% for Meat in catMeat %}
                    <div class="col">
                        <div class="card col-sm-5">
                            <img src="{{Meat.picture}}" alt="Girl in a jacket">              
                            <div class="card-body">
                            <h5 class="card-title text-center"> {{Meat.name}}</h5>
                            <p class="card-text text-center">
                                 {{Meat.rating}} stars (rated by users),
                                <a class="card-text text-end caloriestext"> {{Meat.calories}} calories</a>
                                
                        </p>
                          </div>
                        </div>
                      </div>
                    {% else %}
                        No meals found...
                    {% endfor %}
                    </div>
                    </div>        </div>
      </div>
    </div>
    <div class="col">
        <div class="collapse multi-collapse" id="vegan">
          <div class="card card-body">
            Some placeholder content for the first collapse component of this multi-collapse example. This panel is hidden by default but revealed when the user activates the relevant trigger.
          </div>
        </div>
      </div>
    <div class="col">
      <div class="collapse multi-collapse" id="vegetarian">
        <div class="card card-body">
          Some placeholder content for the second collapse component of this multi-collapse example. This panel is hidden by default but revealed when the user activates the relevant trigger.
        </div>
      </div>
    </div>
  </div>
  
    <!-- Pills navs -->
<ul class="nav nav-pills mb-3" id="ex1" role="tablist">
